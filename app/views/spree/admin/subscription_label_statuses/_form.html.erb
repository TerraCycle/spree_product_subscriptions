<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_subscription_label_statuses_list), spree.admin_subscription_label_statuses_path, class: 'btn-success', icon: 'chevron-left' %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @subscription_label_status } %>

<%= f.field_container :title, class: ['form-group'] do %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.error_message_on :title %>
<% end %>
<%= f.field_container :label_status, class: ['form-group'] do %>
  <%= f.label :label_status %>
  <%= f.select :label_status, options_for_select(Spree::Label.state_machine.states.map(&:name)), class: 'form-control' %>
  <%= f.error_message_on :label_status %>
<% end %>
