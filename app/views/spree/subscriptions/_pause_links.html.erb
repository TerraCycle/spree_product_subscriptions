<% if @subscription.paused? %>
  <%= link_to Spree.t(:activate), "javascript:void(0)", class: "btn ajax_handler #{ btn_class } tc-btn tc-btn-green", data: { url: unpause_subscription_path(@subscription), method: "PATCH", confirmation: Spree.t('subscriptions.confirm.activate') } %>
<% else %>
  <%= link_to Spree.t('subscriptions.pause.label'), "javascript:void(0)", class: "btn #{ btn_class } ajax_handler tc-btn tc-btn-green", data: { url: pause_subscription_path(@subscription), method: "PATCH", confirmation: Spree.t('subscriptions.confirm.pause') } %>
<% end %>
